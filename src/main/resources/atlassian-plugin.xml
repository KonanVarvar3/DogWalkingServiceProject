<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="myPlugin"/>

    <!-- add our web resources -->
    <web-resource key="myPlugin-resources" name="myPlugin Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>

        <resource type="download" name="styleClient.css" location="/site/css/styleClient.css"/>
        <resource type="download" name="styleDog.css" location="/site/css/styleDog.css"/>
        <resource type="download" name="styleDogWalker.css" location="/site/css/styleDogWalker.css"/>
        <resource type="download" name="styleMain.css" location="/site/css/styleMain.css"/>
        <resource type="download" name="scriptInfClient.js" location="/site/js/scriptInfClient.js"/>
        <resource type="download" name="scriptInfDog.js" location="/site/js/scriptInfDog.js"/>
        <resource type="download" name="scriptInfDogWalker.js" location="/site/js/scriptInfDogWalker.js"/>
        <resource type="download" name="dogs.jpg" location="/site/images/dogs.jpg"/>
        <resource type="download" name="images/" location="/images"/>

        <context>atl.general</context>
    </web-resource>

    <component-import key ="ao" name="Active Objects Service" interface="com.atlassian.activeobjects.external.ActiveObjects"/>

    <ao key="ao-module">
        <entity>com.dvoryanchikov.dogWalkingService.myPlugin.entities.IClient</entity>
        <entity>com.dvoryanchikov.dogWalkingService.myPlugin.entities.IDogWalker</entity>
        <entity>com.dvoryanchikov.dogWalkingService.myPlugin.entities.IDog</entity>
        <entity>com.dvoryanchikov.dogWalkingService.myPlugin.entities.IRequestWalk</entity>
    </ao>

    <rest key="rest" path="/dogWalkingRest" version="1.0"/>

    <servlet name="Servlet for dog walking service"
             class="com.dvoryanchikov.dogWalkingService.myPlugin.servlet.ServletDogWalking"
             key="servlet-service">
        <url-pattern>/servlet-inf/site/*</url-pattern>
    </servlet>

    <component key="client-manager" class="com.dvoryanchikov.dogWalkingService.myPlugin.managers.ClientManager" />
    <component key="dog-manager" class="com.dvoryanchikov.dogWalkingService.myPlugin.managers.DogManager" />
    <component key="dogWalker-manager" class="com.dvoryanchikov.dogWalkingService.myPlugin.managers.DogWalkerManager" />
    <component key="requestWalk-manager" class="com.dvoryanchikov.dogWalkingService.myPlugin.managers.RequestWalkManager" />
    <component-import key="templateRenderer" interface="com.atlassian.templaterenderer.TemplateRenderer"/>

</atlassian-plugin>